---
import { Image } from 'astro:assets';

interface Props {
  image: ImageMetadata;
  title: string;
  location: string;
  price: number;
  type: string;
  beds: number;
  baths: number;
  area: number;
  status: string;
  tags?: string[];
}

const { image, title, location, price, type, beds, baths, area, status, tags = [] } = Astro.props;
---

<div class="bg-white rounded-2xl overflow-hidden group transition-shadow duration-300">
  <div class="relative">
    <!-- Status and Tags -->
    <div class="absolute top-4 left-4 flex gap-2 z-10">
      <span class="bg-white text-gray-700 px-3 py-1 rounded-full text-sm font-medium">
        {status}
      </span>
      {tags.map(tag => (
        <span class="bg-brand text-white px-3 py-1 rounded-full text-sm font-medium">
          {tag}
        </span>
      ))}
    </div>

    <!-- Image -->
    <div class="aspect-[4/3] overflow-hidden">
      <Image
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
      />
    </div>

    <!-- Action Buttons -->
    <div class="absolute top-4 right-4 flex gap-2">
      <button class="bg-white/90 hover:bg-white w-8 h-8 rounded-full flex items-center justify-center text-brand transition-colors duration-300">
        <i class="ri-image-line"></i>
      </button>
      <button class="bg-white/90 hover:bg-white w-8 h-8 rounded-full flex items-center justify-center text-brand transition-colors duration-300">
        <i class="ri-heart-line"></i>
      </button>
      <button class="bg-white/90 hover:bg-white w-8 h-8 rounded-full flex items-center justify-center text-brand transition-colors duration-300">
        <i class="ri-share-line"></i>
      </button>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    <div class="flex items-center text-gray-600 mb-4">
      <i class="ri-map-pin-line mr-2 text-brand text-xl"></i>
      <span>{location}</span>
    </div>

    <div class="flex items-center justify-between mb-4">
      <span class="text-black text-2xl font-bold">${price.toLocaleString()}</span>
      <span class="text-gray-600">{type}</span>
    </div>

    <div class="flex items-center justify-between text-gray-600 border-t pt-4">
      <div class="flex items-center gap-1">
        <i class="ri-hotel-bed-line text-brand text-xl"></i>
        <span>{beds} beds</span>
      </div>
      <div class="flex items-center gap-1">
        <i class="ri-contrast-drop-line text-brand text-xl"></i>
        <span>{baths} baths</span>
      </div>
      <div class="flex items-center gap-1">
        <i class="ri-ruler-line text-brand text-xl"></i>
        <span>{area} sq ft</span>
      </div>
    </div>
  </div>
</div>
