---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  city: string;
  propertyCount: number;
  url: string;
}

const { image, city, propertyCount, url } = Astro.props;
---

<div class="relative rounded-lg overflow-hidden group transform transition-transform duration-300 lg:hover:scale-105">
  <Image 
    src={ image } 
    alt={ city } 
    class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110" 
  />
  <div class="absolute inset-0 bg-black bg-opacity-40 transition-all duration-300 group-hover:bg-opacity-60 flex flex-col justify-end p-4">
    <h3 class="text-white text-xl font-bold transform transition-all duration-300 lg:translate-y-2 group-hover:translate-y-0">{ city }</h3>
    <p class="text-white lg:opacity-0 transform transition-all duration-300 lg:translate-y-4 lg:group-hover:translate-y-0 lg:group-hover:opacity-100">{ propertyCount } Propiedades</p>
  </div>
</div>