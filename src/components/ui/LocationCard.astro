---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  city: string;
  propertyCount: number;
  url: string;
}

const { image, city, propertyCount, url } = Astro.props;
---

<a
  href={url}
  class="relative rounded-xl overflow-hidden group hover:shadow-lg transition-shadow duration-300"
>
  <div class="aspect-[4/5] w-full">
    <Image
      src={image}
      alt={`${city} cityscape`}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
    />
  </div>
  <div class="absolute inset-0 bg-gradient-to-t from-transparent to-black/60">
    <div class="absolute top-6 left-6">
      <h3
        class="text-white text-2xl font-semibold mb-1 underline drop-shadow-lg"
      >
        {city}
      </h3>
      <p class="text-white/90 text-sm">{ propertyCount } properties</p>
    </div>
  </div>
  
  <div class="absolute bottom-6 left-6">
    <button class="bg-brand text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-white hover:text-brand flex items-center gap-2 opacity-0 translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300">
      Explore Now
      <i class="ri-arrow-right-s-line"></i>
    </button>
  </div>
</a>
