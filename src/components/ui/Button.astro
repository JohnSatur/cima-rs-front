---
interface Props {
  text: string;
  link: string;
  icon?: string;
}

const { text, link, icon } = Astro.props;
---

<a href={ link } class="bg-brand text-white text-lg font-semibold px-8 py-4 rounded-md hover:bg-brand-100 hover:text-brand transition-colors duration-150">
  { text }
  { <i class={ `ml-2 ${ icon || 'hidden' }` }></i> }
</a>
