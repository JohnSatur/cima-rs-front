---
import { Image } from 'astro:assets';

import Button from '@components/ui/Button.astro';
import BlogPostCard from '@components/ui/BlogPostCard.astro';

import temp2 from '@images/properties/temp2.jpeg';
import temp3 from '@images/properties/temp3.jpeg';
import temp4 from '@images/properties/temp4.jpeg';

import luisaHeadshot from '@images/luisa-1.jpg';
import claudiaHeadshot from '@images/claudia-1.jpg';

const articles = [
  {
    title: 'Artículo de ejemplo',
    href: '/blog/post-1',
    image: temp3,
    category: 'Tecnología',
    excerpt: 'Este es un pequeño extracto del artículo...',
    author: {
      name: 'Luisa',
      image: luisaHeadshot
    },
    date: '17 de febrero de 2025'
  },
  {
    title: 'Artículo de ejemplo 2',
    href: '/blog/post-2',
    image: temp4,
    category: 'Tecnología',
    excerpt: 'Este es un pequeño extracto del artículo...',
    author: {
      name: 'Claudia de la Luna',
      image: claudiaHeadshot
    },
    date: '17 de febrero de 2025'
  },
];
---
<section class="max-w-7xl mx-auto py-20 px-4">
  <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Últimos Artículos</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">Mantente actualizado con las últimas tendencias y noticias del mercado inmobiliario a través de nuestro blog.</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {articles.map(article => (
        <BlogPostCard post={article} />
      ))}
  </div>

  <div class="text-center">
    <Button text="Ir al blog" link="/blog" icon="ri-arrow-right-line" />
  </div>
</section>
