---
interface Props {
  equipment?: string[];
}

const { equipment } = Astro.props;
---

<div class="mt-12">
  <h2 class="text-2xl font-semibold mb-4">Amenidades</h2>
    {
      equipment && equipment.length > 0 ? (
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          {equipment.map((amenity) => (
            <div class="flex items-center gap-2 text-3xl">
              <i class="ri-checkbox-circle-fill text-brand" />
              <span>{amenity}</span>
            </div>
          ))}
        </div>
      ) : (
        <p class="text-gray-600">
          No hay amenidades disponibles para esta propiedad.
        </p>
      )
    }
</div>
