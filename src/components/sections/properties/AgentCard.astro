---
import { Image } from "astro:assets";

interface Props {
  name: string;
  role: string;
  email: string;
  phone: string;
  image: ImageMetadata;
}

const { name, role, email, phone, image } = Astro.props;
---

<div class="bg-white bg-opacity-90 p-8 rounded-lg shadow-xl backdrop-blur-sm">
  <div class="flex items-center gap-4 mb-6">
    <Image
      src={image}
      alt={name}
      class="w-48 h-48 rounded-full object-cover border-4 border-brand-500 shadow-lg"
    />
    <div>
      <h3 class="text-2xl font-bold text-gray-800">{name}</h3>
      <p class="text-brand-600 font-semibold">{role}</p>
    </div>
  </div>
  <div class="space-y-4">
    <p class="flex items-center gap-3 text-gray-700">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 text-brand-500"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
        ></path>
      </svg>
      <span class="text-lg">{phone}</span>
    </p>
    <p class="flex items-center gap-3 text-gray-700">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 text-brand-500"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
        ></path>
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
        ></path>
      </svg>
      <span class="text-lg">{email}</span>
    </p>
  </div>
</div>

