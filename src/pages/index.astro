---
import Header from '@components/navbarFooter/Header.astro';
import MainLayout from '../layouts/MainLayout.astro';
import Image from 'astro/components/Image.astro';

import mainHouse from '@images/properties/temp1.jpeg';
---

<MainLayout>
	<div class="relative h-screen">
		<div class="absolute inset-0">
				<Image src={ mainHouse } alt="Modern living room" class="w-full h-full object-cover" />
				<div class="absolute inset-0 bg-black bg-opacity-40"></div>
		</div>
		<div class="relative h-full flex flex-col justify-center items-center text-white px-4">
				<div class="flex space-x-4 mb-4 lg:text-xl">
						<span>4 Recámaras</span>
						<span>2 Baños</span>
						<span>180 M²</span>
				</div>
				<h1 class="text-5xl font-bold text-center mb-4 lg:text-7xl">Residencia en Monte Magno</h1>
				<p class="text-2xl mb-6 lg:text-4xl">$2,800,000</p>
				<button class="bg-brand-400 text-black font-semibold px-6 py-3 rounded-full hover:bg-brand-500 transition-colors">
						Ver detalles <i class="ri-arrow-right-line"></i>
				</button>
		</div>
	</div>
</MainLayout>
