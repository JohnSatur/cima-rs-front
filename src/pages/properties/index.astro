<MainLayout title="Propiedades">
  <main class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/4">
          <div class="bg-white p-6 rounded-lg shadow-md">
              <h2 class="text-xl font-semibold mb-4 text-gray-800">Filtros</h2>
              <form>
                  <!-- Ciudad -->
                  <div class="mb-4">
                      <label for="city" class="block text-sm font-medium text-gray-700 mb-2">Ciudad</label>
                      <select id="city" class="w-full p-2 border rounded focus:ring-2 focus:ring-brand focus:border-brand">
                          <option>Xalapa</option>
                          <option>Puebla</option>
                          <option>Veracruz</option>
                          <option>Guadalajara</option>
                      </select>
                  </div>
      
                  <!-- Precio (Range) -->
                  <div class="mb-4">
                      <label for="price" class="block text-sm font-medium text-gray-700 mb-2">Precio</label>
                      <input type="range" id="price" min="1000000" max="17000000" class="w-full h-2 bg-brand-100 rounded-lg appearance-none cursor-pointer">
                      <div class="flex justify-between text-sm text-gray-600">
                          <span>$1,000,000</span>
                          <span>$17,000,000</span>
                      </div>
                  </div>
      
                  <!-- M² de terreno (Range) -->
                  <div class="mb-4">
                      <label for="land-area" class="block text-sm font-medium text-gray-700 mb-2">M² de terreno</label>
                      <input type="range" id="land-area" min="100" max="1000" class="w-full h-2 bg-brand-100 rounded-lg appearance-none cursor-pointer">
                      <div class="flex justify-between text-sm text-gray-600">
                          <span>100 m²</span>
                          <span>1000 m²</span>
                      </div>
                  </div>
      
                  <!-- M² de construcción (Range) -->
                  <div class="mb-4">
                      <label for="construction-area" class="block text-sm font-medium text-gray-700 mb-2">M² de construcción</label>
                      <input type="range" id="construction-area" min="100" max="1000" class="w-full h-2 bg-brand-100 rounded-lg appearance-none cursor-pointer">
                      <div class="flex justify-between text-sm text-gray-600">
                          <span>100 m²</span>
                          <span>1000 m²</span>
                      </div>
                  </div>
      
                  <!-- Tipo de trato (Venta o Renta) -->
                  <div class="mb-4">
                      <label class="block text-sm font-medium text-gray-700 mb-2">Tipo de trato</label>
                      <div class="flex gap-4">
                          <label class="flex items-center">
                              <input type="radio" name="deal-type" class="form-radio text-brand focus:ring-brand">
                              <span class="ml-2">Venta</span>
                          </label>
                          <label class="flex items-center">
                              <input type="radio" name="deal-type" class="form-radio text-brand focus:ring-brand">
                              <span class="ml-2">Renta</span>
                          </label>
                      </div>
                  </div>
      
                  <!-- Botón de aplicar filtros -->
                  <button type="submit" class="w-full bg-brand text-white px-4 py-2 rounded hover:bg-brand-600 transition duration-300">
                      Aplicar filtros
                  </button>
              </form>
          </div>
      </div>

        <!-- Listado de propiedades -->
        <div class="md:w-3/4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- {properties.map(property => (
                  
